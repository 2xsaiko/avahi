import sys, getopt

try:
    import avahi, gobject, dbus
except ImportError:
    print "Sorry, to use this tool you need to install Avahi, pygtk and python-dbus."
    sys.exit(1)

try:
    import dbus.glib
except ImportError, e:
    pass


if len(sys.argv) <= 1:
    print "Please specify host name(s) to resolve."
    sys.exit(1)

bus = dbus.SystemBus()
server = dbus.Interface(bus.get_object(avahi.DBUS_NAME, avahi.DBUS_PATH_SERVER), avahi.DBUS_INTERFACE_SERVER)

ret = 0

for name in sys.argv[1:]:
    try:
        r = server.ResolveHostName(avahi.IF_UNSPEC, avahi.PROTO_UNSPEC, name, avahi.PROTO_UNSPEC, dbus.UInt32(0))
        print r[2], r[4]
    except dbus.DBusException, e:
        print "Resolving '%s' failed: %s" % (name, str(e))
        ret = 1

sys.exit(ret)
