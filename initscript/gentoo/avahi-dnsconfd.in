opts="${opts} reload"

depend() {
	need avahi-daemon
	use net
}

start() {
	ebegin "Starting avahi-dnsconfd"
	@sbindir@/avahi-dnsconfd -D
	eend $?
}

stop() {
	ebegin "Stopping avahi-dnsconfd"
	@sbindir@/avahi-dnsconfd -k
	eend $?
}

reload() {
	ebegin "Reloading avahi-dnsconfd"
	@sbindir@/avahi-dnsconfd -r
	eend $?
}
