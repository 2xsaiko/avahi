opts="${opts} reload"

depend() {
	use net dbus
}

start() {
	ebegin "Starting avahi-daemon"
	@sbindir@/avahi-daemon -D
	eend $?
}

stop() {
	ebegin "Stopping avahi-daemon"
	@sbindir@/avahi-daemon -k
	eend $?
}

reload() {
	ebegin "Reloading avahi-daemon"
	@sbindir@/avahi-daemon -r
	eend $?
}
